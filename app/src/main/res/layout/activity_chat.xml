<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jason.final_chat.chat">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Enviar"
            tools:layout_editor_absoluteX="308dp"
            tools:layout_editor_absoluteY="434dp"
            android:layout_alignTop="@+id/entrada"
            android:layout_alignRight="@+id/caja"
            android:layout_alignEnd="@+id/caja" />

        <TextView
            android:id="@+id/titulo"
            android:text="@string/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="8dp" />

        <ListView
            android:id="@+id/caja"
            android:layout_width="wrap_content"
            android:layout_height="348dp"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="48dp" />

        <EditText
            android:id="@+id/entrada"
            android:hint="@string/EA"
            android:layout_width="251dp"
            android:layout_height="43dp"
            tools:layout_editor_absoluteY="434dp"
            tools:layout_editor_absoluteX="16dp"
            android:layout_below="@+id/caja"
            android:layout_alignLeft="@+id/caja"
            android:layout_alignStart="@+id/caja"
            android:layout_marginTop="28dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>